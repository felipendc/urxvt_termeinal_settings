[core]
    editor = vim

[url "ssh://git@github.com/"]
    insteadOf = "gh:"

[push]
	default = simple

[credential]
	helper = cache

[pull]
    rebase = preserve

[merge]
    conflictstyle = diff3
    #ff = only

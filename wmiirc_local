MODKEY=Mod4

# Tagging Rules
wmiir write /tagrules <<EOF
  /Mplayer|VLC/ floating=on
  /MPlayer|VLC/ -> ~
  /Gnome-terminal/ -> sel
  /Firefox|Chrome/ -> sel
EOF


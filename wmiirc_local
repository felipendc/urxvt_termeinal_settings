# Status Bar Info
status() {
    BAT=`acpi -b`;
    LEFT=`echo $BAT | cut -d ',' -f 2`;
    #TEMP=`acpi -t -B -c | cut -d ',' -f 2 | cut -d "." -f 1`;
    TEMP=`acpi -t  | awk '{print $4}'`;
    LOAD=$(uptime | sed 's/.*://; s/,//g');
    DATE=`date +"%d/%m/%y %R:%S"`;
    echo -n T: $TEMP '|' B: $LEFT '|' $LOAD '|' $DATE;
}

